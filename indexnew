      align-items: center;
      gap: 10px;
    }
    input[type="text"], input[type="file"] {
      padding: 5px;
      width: 300px;
    }
    button {
      padding: 10px 20px;
      background-color: #f08080;
      color: white;
      border: none;
      cursor: pointer;
    }
    button:hover {
      background-color: #d06666;
    }
    #result {
      margin-top: 20px;
      color: red;
    }

    /* Spinner */
    #spinner {
      display: none;
      margin-top: 20px;
    }
    .loader {
      border: 6px solid #f3f3f3;
      border-top: 6px solid #f08080;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      animation: spin 1s linear infinite;
      margin: auto;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
